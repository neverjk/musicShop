@model _02._11_exam.ViewModel.ForgotPasswordViewModel
    <h2>Forgot Password</h2>
<form asp-action="ForgotPassword" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="Email">Введите Email</label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <input type="submit" value="Send" class="btn btn-outline-dark" />
        </div>
    </div>
</form>