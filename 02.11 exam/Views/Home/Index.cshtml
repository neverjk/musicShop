<div class="container">
    <div style="margin:10px; border-color: dimgray; border-width:3px; border-style:solid" id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://sun9-52.userapi.com/c206616/v206616432/b25d7/nx4V1kmkSWw.jpg" class="d-block w-100" style="height:450px; width:auto" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 style="text-shadow:1px 1px 2px black, 0 0 1em black">New Galaxy M31!</h5>
                    <p style="text-shadow:1px 1px 2px black, 0 0 1em black">
                        Экран (6.4", Super AMOLED, 2340х1080) / Samsung Exynos 9611 (4 x 2.3 ГГц + 4 x 1.7 ГГц) / квадро основная камера: 64 Мп + 8 Мп + 5 Мп + 5 Мп
                    </p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://sun9-23.userapi.com/c857436/v857436432/1ac493/HwUjf6mK48U.jpg" class="d-block w-100" style="height:450px; width:auto" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 style="text-shadow:1px 1px 2px black, 0 0 1em black">МЕГА драйв с FHD + sAMOLED Infinity-U</h5>
                    <p style="text-shadow:1px 1px 2px black, 0 0 1em black">
                        фронтальная 32 Мп / RAM 6 ГБ / 128 ГБ встроенной памяти + microSD (до 512 ГБ) / 3G / LTE / GPS / ГЛОНАСС / BDS
                    </p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://sun9-58.userapi.com/c205524/v205524432/b2d56/2Vr96dqREII.jpg" class="d-block w-100" style="height:450px; width:auto" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 style="text-shadow:1px 1px 2px black, 0 0 1em black">МЕГА Отдых с батареей 600мАч</h5>
                    <p style="text-shadow:1px 1px 2px black, 0 0 1em black">
                        Galileo / поддержка 2х SIM-карт (Nano-SIM) / Android 10 (Q) / 6000 мА*ч
                    </p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <a type="button" class="btn btn-lg btn-outline-dark" style="margin:5px" disabled asp-area="" asp-controller="" asp-action="" asp-route-category="" >Newest products: </a>
    <div class="row mt-5 mb-2" >
        @{
            int i = 0;

            foreach (Product product in Model.GetProducts)
            {
                if (i >= 5)
                {
                    break;
                }
                @await Html.PartialAsync("_ProductCard", product);
                i++;
            }
        }
    </div>
    <div class="container">
        <div class="row">
            <div class="col">
                <h3 style="margin:5px">More products to like:  </h3>
            </div>
            <div class="col" style="align-content:flex-end; justify-content:flex-end; display:flex">
                <a type="button" class="btn btn-lg btn-danger" style="margin:5px" asp-area="" asp-controller="Products" asp-action="ProductsList" asp-route-category="" disabled> >> Go To All Categories </a>
            </div>
        </div>
    </div>
</div>
