@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProductsList</title>
</head>
<body>
    <h1>@ViewBag.Title</h1>
    <h3>
        <a type="button" class="btn btn-dark" style="margin:5px" asp-area="" asp-controller="Product" asp-action="ListProducts" asp-route-category="">All Categories</a><span>>></span>
        @{
            if (Model.ProductCategory != "")
            {
                <a type="button" class="btn btn-dark" style="margin:5px" sp-area="" asp-controller="Product" asp-action="ListProducts" asp-route-category="" disabled>@Model.ProductCategory</a>
            }
        }
    </h3>
    <div class="row mt-5 mb-2" style="justify-content:stretch; display:flex">
        @{
            foreach (Product product in Model.GetProducts)
            {
                @await Html.PartialAsync("_ProductCard", product);
            }
        }
    </div>
</body>
</html>
